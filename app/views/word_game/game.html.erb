<h1>
  <%= "This is your grid: #{@grid}" %>
</h1>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="question">Get yo shit</label>
  <input type="text" id="question" name="word" placeholder="Type answer here">
  <input type="hidden" name="grid" value="<%= @grid %>">
  <input type="hidden" name="time_start" value="<%= @time_start %>">
  <input type="submit" value="Go on!">
</form>
